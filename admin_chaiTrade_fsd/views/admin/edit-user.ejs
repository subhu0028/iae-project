<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<% if(editing) { %>edit-user<% } else { %>add-user<% } %>" method="post">
            <div class="form-control">
                <label for="userName">User Name</label>
                <input type="text" name="userName" id="title" value="<% if(editing) { %><%= user.userName %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">Email</label>
                <input type="text" name="email" id="price" value="<% if(editing) { %><%= user.email %><% } %>">
            </div>

            <div class="form-control">
                <label for="password">Password</label>
                <input type="text" name="password" id="description" value="<% if(editing) { %><%= user.password %><% } %>">
            </div>

            <% if(editing) { %>
                <input type="hidden" value="<%= user._id %>" name="userId">
            <% } %>   
            <button type="submit"><% if(editing) { %>Update User<% } else { %>Add User<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>