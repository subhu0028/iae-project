<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(mentors.length>0) { %>
            <div class="grid">
                <% for (let mentor of mentors) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">
                                <%= mentor.mentorName %>
                            </h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= mentor.mentorImage %>" 
                                alt="<%= mentor.mentorName %>" />
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">
                                <%= mentor.email %>
                            </h2>
                        </div>
                        <div class="card__action">
                            <a href="/admin/edit-mentor/<%= mentor._id %>?edit=true" class="btn">Edit</a>
                            <form action="/admin/delete-mentor" method="POST">
                                <input type="hidden" value="<%= mentor._id %>" name="mentorId">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Mentors Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>




