<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(applications.length>0) { %>
            <div class="grid">
                <% for (let application of applications) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">
                                <%= application.userName %>
                            </h1>
                        </header>
                        
                        <div class="card__content">
                            <h4 class="product__price">
                                <%= application.userEmail %>
                            </h4>
                        </div>
                        <div class="card__content">
                            <p class="product__price">User ID: 
                                <%= application.userID %>
                            </p>
                        </div>
                        <div class="card__content">
                            <p class="product__price">
                                <%= application.country %>
                            </p>
                        </div>
                        <div class="card__content">
                            <p class="product__price">Trading Experience:
                                <%= application.tradingExperience %>
                            </p>
                        </div>
                        <div class="card__content">
                            <p class="product__price">Trading Strategy: 
                                <%= application.tradingStrategy %>
                            </p>
                        </div>
                        <div class="card__content">
                            <p class="product__price">Mentor Reason: 
                                <%= application.reasonMentor %>
                            </p>
                        </div>
                        <div class="card__image">
                            <p class="product__price">Certificate: 
                                <a href="<%= application.certificationPath %>">link</a>
                            </p> 
                        </div>
                        <div class="card__action">
                            <a href="/admin/edit-application/<%= application._id %>?edit=true" class="btn">Approve</a>
                            <form action="/admin/delete-mentor" method="POST">
                                <input type="hidden" value="<%= application._id %>" name="applicationId">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Applications Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>




