<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<% if(editing) { %>edit-blog<% } else { %>add-blog<% } %>" method="post">
            <div class="form-control">
                <label for="authorName">Author Name</label>
                <input type="text" name="authorName" id="title" value="<% if(editing) { %><%= blog.authorName %><% } %>">
            </div>
            <div class="form-control">
                <label for="authorAvatar">Author Avatar URL</label>
                <input type="text" name="authorAvatar" id="imageUrl" value="<% if(editing) { %><%= blog.authorAvatar %><% } %>">
            </div>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) { %><%= blog.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="content">Content</label>
                <textarea type="text" name="content" id="description" rows="5"><% if(editing) { %><%= blog.content %><% } %></textarea>
            </div>

            <% if(editing) { %>
                <input type="hidden" value="<%= blog._id %>" name="blogId">
            <% } %>   
            <button type="submit"><% if(editing) { %>Update Blog<% } else { %>Add Blog<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>